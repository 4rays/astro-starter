---
import Welcome from "@/components/Welcome.astro";
import Layout from "@/layouts/Layout.astro";
import "@/styles.css";
import {Button} from "@/components/primitives/button";

if (!Astro.locals.user?.id) return Astro.redirect("/sign-in");

const user = Astro.locals.user;
---

<Layout>
  <div class="dashboard p-6 max-w-4xl mx-auto pt-20">
    <h1 class="text-2xl font-bold text-foreground mb-4">Dashboard</h1>

    <Welcome user={user} />

    <div class="flex items-center gap-x-4">
      <dt class="flex-none">
        <span class="text-sm font-medium text-muted-foreground">User</span>
      </dt>
      <dd class="text-sm font-medium text-foreground">
        {user.name || "User"}
      </dd>
    </div>

    <div class="mt-4 flex items-center gap-x-4">
      <dt class="flex-none">
        <span class="text-sm font-medium text-muted-foreground">Email</span>
      </dt>
      <dd class="text-sm font-medium text-foreground">
        {user.email || "user@example.com"}
      </dd>
    </div>
    <Button href="/email-demo" variant="outline" size="sm" class="mt-5">
      Email Demo â†’
    </Button>
  </div>
</Layout>
